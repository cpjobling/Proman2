<% project = project_selection_index %>
<% creator = project.creator %>
<tr id="project_<%= project.id -%>" class="<%=  cycle('odd', 'even') %>">
  <td>
    <%= link_to project.id, project, {:title => 'Click to view details of: ' + project.title}%>
  </td>
  <td title="<%= project.title %>">
    <%=  abbreviate(project.title) %>
  </td>
  <td><%= creator.name.last_first %>
  </td>
  <td title="<%=  project.centre_title %>"><%= project.centre_abbrev %></td>
  <td><input type="checkbox" id="project_selection_<%= project.id %>" name="project_selection[project_ids][]" value="<%=  project.id %>"
    <% if selection.include?(project.id) %>
      checked="checked"
    <% end %> /></td>
</tr>
