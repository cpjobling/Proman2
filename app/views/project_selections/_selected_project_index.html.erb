<% project = selected_project_index.project %>
<% creator = project.creator %>
<tr id="project_<%= project.id -%>" class="<%= cycle('even','odd')%>">
  <tr><td><%= selected_project_index.position   %></td>
  <td title="<%= project.title %>">
    <%= link_to abbreviate(project.title), project, {:title => 'Click to view details of: ' + project.title }%>
  </td>
  <td><%= creator.name.last_first %>
  </td>
  <td title="<%=  project.centre_title %>"><%= project.centre_abbrev %></td>
</tr>
