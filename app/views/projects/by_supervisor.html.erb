<% title "Projects by Supervisor" %>
<%= render(:partial => "navigation") %>

<% content_for :head do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('.accordian .content').hide();
      $('.accordian .head').click(function() {
        $(this).next().toggle('slow');
        return false;
      }).next().hide();
    });
  </script>
<% end %>


<p>This page shows all the projects that are currently available from each supervisor. Note that although each member of staff has been asked to provide four or five projects, staff loading
  considerations may mean that their projects may be eliminated early.
  For example, some very popular projects/supervisors
may be eliminated in the first allocation round may not appear in later rounds.</p>

<p>Click on the supervisor's name to see his or her projects.</p>

<% if @supervisors.blank? %>
  <p>No projects to display.</p>
<%else%>
  <% @supervisors.each do |supervisor| %>
    <%  projects = Project.find_all_by_created_by(supervisor).select { |p| p.available? } %>
    <% unless projects.size == 0 %>
      <div class="accordian">
        <h3 class="head"
            id="<%= supervisor.id %>"
            title="<%= supervisor.id %>: <%= supervisor.name %>">
          <%= supervisor.name %>
        </h3>
        <div class="content">
          <p><em>Contact email</em>: <a href="mailto:<%= supervisor.email %>"><%= supervisor.email %></a>.<br />
          <em>Research centre</em>: <%= supervisor.supervisor.research_centre.title %></p>
          <table>
            <thead>
              <tr>
                <th>Number</th><th>Title</th><th>Available?</th>
              </tr>
            </thead>
            <tbody>
              <%  projects.each do |project| %>
                <tr class="<%=  cycle('odd', 'even') %>">
                  <td>
                    <%= project.id -%>
                  </td>
                  <td>
                    <%= link_to project.title, project %>
                  </td>
                  <td>
                    <%= project.available? %>
                  </td>
                </tr>
              <%  end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  <% end %>
<%end%>
