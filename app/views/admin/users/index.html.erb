<% title "Manage users" %>

<p><%= render(:partial=>"admin/navigation") %></p>

<% content_for :head do %>
  <%= render(:partial => "shared/import_tablesorter") %>
  <script type="text/javascript">
    $(document).ready(function() {
      $("#users")
      .tablesorter({sortList: [[1, 0]], widthFixed: true, widgets: ['zebra']});
      //.tablesorterPager({container: $("#pager"), positionFixed: false});
    });
  </script>
<% end %>

<p><%= link_to 'New user', new_admin_user_path %></p>
<table id="users" class="tablesorter">
  <thead>
    <th title="Click to sort by user id: click again to reverse sort direction.">id</th>
    <th title="Click to sort by user name: click again to reverse sort direction.">Name</th>
    <th title="Click to sort by user roles: click again to reverse sort direction.">Role</th>
    <th class="{sorter: false}">Show</th><th class="{sorter: false}">Edit</th><th class="{sorter: false}">Delete</th>
  </thead>
  <tfoot>
    <th>id</th><th>Name</th><th>Role</th><th>Show</th><th>Edit</th><th>Delete</th>
  </tfoot>
  <tbody>
    <%= render(:partial=>"user_index", :collection => @users) %>
  </tbody>
</table>
<%#= render(:partial => "shared/tablesorter_pager", :locals => { :pager_id => 'pager' })%>

