<% title "Showing user details" %>


<h3>User record</h3>
<p>
  <strong>User Id (primary key)</strong>: <%= @user.id %><br />
  <strong>Login</strong>:<%= @user.login %><br />
  <strong>Name</strong>: <%= @user.name %>
  <% if @user.known_as %>
    <strong>Known as</strong>: <%= @user.known_as %>.
  <% end %><br />
  <strong>Email</strong>: <a href="mailto:<%= @user.email %>"><%= @user.email %></a>
  <strong>Roles</strong>: <%= show_roles(@user) %>
</p>
<% if student = @user.student %>
  <h3>Student details</h3>
  <%= render(:partial => 'admin/students/show_student', :locals => {:student => student}) %>
<% end %>
<% if staff = @user.supervisor %>
  <h3>Staff details</h3>
  <%= render(:partial => 'admin/supervisors/show_supervisor', :locals => {:staff => staff}) %>
<% end %>



<p>
  <%= link_to 'Edit', edit_admin_user_path(@user) %> |
  <%= link_to 'Back', admin_users_path %>
</p>