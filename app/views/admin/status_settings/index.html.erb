<% title "Manage system status settings" %>

<%= render(:partial=>"admin/navigation") %>

<p>This page summarizes the system seetings ordered by code.</p>

<% if @settings.blank? %>
  <p>No system status settings have been defined. <%= link_to "Create one now?", new_admin_status_setting_path %></p>
<%else%>
  <p><%= link_to "Current system status", admin_statuses_path %></p>
  <table>
    <thead>
      <tr>
        <th>Code</th><th>Title</th><th>Message</th><th>Default permissions</th><th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render(:partial => "status_settings_index", :collection => @settings) %>
    </tbody>
  </table>
  <p><%= link_to 'New system status setting', new_admin_status_setting_path %></p>
<%end%>