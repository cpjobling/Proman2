<% title "Bulk upload project data" %>

<% headline "Upload project descriptions from a file" %>

<%= render(:partial=>"admin/navigation")  %>

<% slogan "An apple a day keeps the Doctor away!" %>

<% form_for :import_projects,
            :url=>{:controller=>"admin/setup",
            :action=>"csv_import_projects"},
            :html => { :multipart => true } do |f| -%>
 <table>
   <tr>
     <td>
      <label for="projects_file">
        Select a CSV File :
      </label>
     </td>
     <td >
       <%= f.file_field :projects_file -%>
     </td>
   </tr>
   <tr>
     <td colspan='2'>
       <%= submit_tag 'Submit' -%> <%=  link_to "Back", admin_setup_path %>
     </td>
   </tr>
 </table>
<% end -%>
