<% title "Manage supervisors" %>

<%= render(:partial=>"admin/navigation") %>

<% content_for :head do %>
  <%= render(:partial => "shared/import_tablesorter") %>
  <script type="text/javascript">
    $(document).ready(function() {
      $("#supervisors")
      .tablesorter({sortList: [[1, 0]], widthFixed: true, widgets: ['zebra']})
      .tablesorterPager({container: $("#pager"), positionFixed: false});
    });
  </script>
<% end %>

<p>
  <%= link_to 'New supervisor', new_admin_supervisor_path %>
</p>

<table id="#supervisors" class="tablesorter">
  <thead>
    <th title="Click to sort by staff id: click again to reverse sort direction.">Staff id</th>
    <th title="Click to sort by name: click again to reverse sort direction.">Name</th>
    <th title="Click to sort by research centre: click again to reverse sort direction.">Centre</th>
    <th title="Click to sort by supervisor load: click again to reverse sort direction.">Students</th>
    <th title="Click to sort by approved loading: click again to reverse sort direction.">Loading</th>
    <th class="{sorter: false}">Show</th><th class="{sorter: false}">Edit</th><th class="{sorter: false}">Delete</th>
  </thead>
  <tfoot>
  <th>Staff id</th><th>Name</th><th>Centre</th><th>Students</th><th>Loading</th><th>Show</th><th>Edit</th><th>Delete</th></tfoot>
  <tbody>
    <%= render(:partial => "supervisor_index", :collection => @supervisors) %>
  </tbody>
</table>
<%#= render(:partial => "shared/tablesorter_pager", :locals => { :pager_id => 'pager' })%>

