<% title "Set status" %>

<% if @status.code %>
  <fieldset><legend>Current setting</legend>
    <h3>Code</h3>
    <p> <%= @status.code %></p>
    <h3>Message</h3><%= textilize(@status.message) %>
    <h3>Default permissions</h3><p><code><%= @status.default_permissions %></code> (<%= @status.default_permissions.to_octal %>)
    <%= render(:partial => "other_settings", :locals => { :setting => @status }) %>
  </fieldset>
<% else %>
  <p>Currrent status undefined.</p>
<% end %>
<% form_for ([:admin, @status]) do |f| %>
  <%= f.error_messages %>
  <fieldset><legend>Available settings</legend>
    <table>
      <thead>
        <tr>
          <th>Code</th><th>Message</th><th>Default permissions</th><th>Select</th>
        </tr>
      </thead>
      <tbody>
        <% @settings.each do |setting| %>
          <tr class="<%=  cycle('odd', 'even') %>">
            <td>
              <%=  setting.code %>
            </td>
            <td>
              <%= setting.message %>
            </td>
            <td>
              <%= setting.default_permissions.to_s %>
            </td>
            <td>
              <% if setting.code == @status.code %>
                <%= f.radio_button :status_setting, setting.id, :checked => true %>
              <% else %>
                <%= f.radio_button :status_setting, setting.id %>
              <% end %>
            </td>
          </tr>
        <%  end %>
      </tbody>
    </table>
    <p>
    <p><%= f.submit 'Update' %> <%= link_to 'Cancel', admin_status_settings_path %></p>
  </fieldset>
<% end %>
