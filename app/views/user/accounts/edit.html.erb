<h1>Edit your account</h1>
<p>Show current account for: <%= link_to_current_user :content_method => :login %> | <%= link_to 'Change Password', user_account_password_settings_path(current_user) %></p>
<%= error_messages_for :user %>
  
<% form_for :user, :url => user_account_url(@user),
									 :html => { :method => :put },
									 :builder => Uberkit::Forms::Builder do |f| %> 
  
	<%= render :partial => "user/accounts/edit_account", :locals => { :f => f } %>
  
  <%= f.submit 'Save' %>
<% end %>

<%= link_to "My account", my_account_path %> | <%= link_to "Back", user_account_path(current_user) %>

